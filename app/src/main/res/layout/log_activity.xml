<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/menu"
        android:paddingTop="1dp"
        android:layout_marginBottom="20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/home"
            android:id="@+id/home"
            android:layout_weight="1"
            android:contentDescription="@string/home"
            android:paddingTop="5pt"
            android:paddingBottom="5pt" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/veh"
            android:id="@+id/oilPrice"
            android:layout_weight="1"
            android:contentDescription="@string/oil_price"
            android:paddingTop="5pt"
            android:paddingBottom="5pt" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/contacts"
            android:id="@+id/contacts"
            android:layout_weight="1"
            android:contentDescription="@string/contacts"
            android:paddingTop="5pt"
            android:paddingBottom="5pt" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/litrBalance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/allLitrs"
            android:layout_weight="2"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/litrs"
            android:layout_weight="4"
            android:textAlignment="viewEnd"
            android:textSize="25sp"
            android:textColor="@color/colorRed"
            android:elevation="0dp" />

    </LinearLayout>

    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:text="@string/creditLimit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/creditLimit"
        android:layout_weight="2"
        android:textSize="18sp"
        android:elevation="0dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/credit"
        android:layout_weight="4"
        android:textAlignment="viewEnd"
        android:textSize="25sp"
        android:textColor="@color/colorRed"
        android:elevation="0dp" />

</LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/debt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/debtLitrs"
            android:layout_weight="2"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/debt"
            android:layout_weight="4"
            android:textAlignment="viewEnd"
            android:textSize="25sp"
            android:textColor="@color/colorRed" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <TextView
            android:text="@string/moneyBalance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/moneyBalance"
            android:layout_weight="2"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/money"
            android:layout_weight="4"
            android:textAlignment="viewEnd"
            android:textSize="25sp"
            android:textColor="@color/colorRed"
            android:elevation="0dp" />

    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="155sp"
        android:id="@+id/list" />

</LinearLayout>